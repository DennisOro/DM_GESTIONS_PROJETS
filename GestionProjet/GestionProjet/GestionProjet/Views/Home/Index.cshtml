@{
    ViewBag.Title = "Home Page";
}

@using GestionProjet.Models

@model LogPrUsTskComb

<div class="jumbotron">
    <h1>Gestion de Projets</h1>

</div>



@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="form-group centerlook">
        <p>
            Nom d'utilisateur: @Html.EditorFor(model => model.Login.UserID)
        </p>

    </div>

    <div class="form-group centerlook">
        <p>
            Nom d'utilisateur: @Html.EditorFor(model => model.Login.Password)
        </p>
    </div>

    <input type="submit" value="Valider" />
    <div>
        @Html.DisplayFor(model => model.Login.Message)
    </div>

}

     <p> </p>

<div>
    <p>Projets</p>
    <table class="table">
        <tr>
            <th>
                Project Id
            </th>
            <th>
                Project Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ProjectsList)
        {
            <tr onclick="@("window.location.href='" + @Url.Action("Project", "Project") + "'");">
                <td>
                    @item.ProjectId
                </td>
                <td>
                    @item.ProjectName
                </td>
            </tr>
        }
    </table>
</div>

<div>
    <p>Employés</p>
    <table class="table">
        <tr>
            <th>
                Prenom Employé
            </th>
            <th>
                Nom Employé
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.UsersList)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
            </tr>
        }
    </table>
</div>

<div>
    <p>Tâches</p>
    <table class="table">
        <tr>
            <th>
                Tâche
            </th>
            <th>
                Statut
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.TasksList)
        {
            <tr>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Status
                </td>
            </tr>
        }
    </table>
</div>